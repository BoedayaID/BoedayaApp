<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.infodialog.InfoDialogFragment">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/blue_200"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Angklung"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:maxLines="12"
        android:text="@string/dummy_sejarah"
        android:textAlignment="center" />

    <ToggleButton
        android:id="@+id/btn_bucket"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end|center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_favorite_selector"
        android:textOff="Tambahkan ke Bucket"
        android:textOn="Hapus dari Bucket"
        android:visibility="gone"
        tools:visibility="visible" />

    <ToggleButton
        android:id="@+id/btn_history"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_bucket"
        android:layout_centerHorizontal="true"
        android:layout_gravity="end|center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_favorite_selector"
        android:textOff="Tambahkan ke History"
        android:textOn="Hapus dari History"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>