<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageView
        android:scaleType="center"
        android:id="@+id/img_tempat_wisata"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:background="@color/blue_200" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lembang"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_title"
            android:id="@+id/tiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiket untuk:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tiket"
            android:text="3 orang"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/kadaluarsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dapat digunakan sampai:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_above="@id/tv_exp_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_exp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="20 Agustus 2021"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>